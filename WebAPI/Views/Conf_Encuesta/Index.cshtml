@model Camp_EncuestaModel
@{
    ViewData["Title"] = "Campos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Configuracion de Campos</h1>
    
</div>

<div class="card">
    <div class="card-header">
        Nuevo Campo
    </div>
    <div class="card-body">        
        
        </hr>
        
           
            <form asp-action="Create" asp-controller="Conf_Encuesta" method="post">
            <input asp-for="Id_encuesta" class="form-control form-control-sm" type="hidden"  value="@Model.Id_encuesta"/>
                <div class="mb-2">
                    <label class="form-label">Nombre Campo</label>
                    <input type="text" class="form-control form-control-sm" asp-for="Nombre_campo" />
                </div>

                <div class="mb-2">
                    <label class="form-label">Titulo: </label>
                    <input type="text" class="form-control form-control-sm" asp-for="Titulo_campo" />
                </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text form-control form-control-sm">Campo Requerido: </label>
                </div>
                <select class="form-control-sm custom-select" asp-for="Requerido">
                    <option value=true>Si</option>
                    <option selected value=false>No</option>
                </select>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text form-control form-control-sm">Tipo Campo: </label>
                </div>
                <select class="form-control-sm custom-select" asp-for="Tipo_campo">
                    <option selected value="text">Texto</option>
                    <option value="number">Numero</option>
                    <option value="datetime-local">Fecha</option>
                </select>
            </div>

                <button type="submit" class="btn btn-success btn-sm">Guardar</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-warning btn-sm"> Volver a la lista.</a>


            </form>
            
        
        


    </div>
</div>


